<p class="pull-right">
  <%= link_to "edit #{@user.username}", edit_user_path(@user), class: "btn btn-info" %>
  <%= link_to "add a new user", new_user_path, class: "btn btn-info" %>
  <%= link_to "list all users", users_path, class: "btn btn-info" %>
</p>

<h1><%= @user.username %></h1>

<dl>
  <dt>Email address</dt>
  <dd><%= @user.email %></dd>
  <dt>Date of birth</dt>
  <dd><%= (@user.born_on.strftime("%-d %b %Y") if @user.born_on) || "n/a" %></dd>
  <dt>Zip code</dt>
  <dd><%= @user.zip_code || "n/a" %></dd>
  <dt>Bio</dt>
  <dd><%= @user.bio || "n/a" %></dd>
  <dt>Minor?</dt>
  <dd><%= bool_to_text @user.is_minor? %></dd>
  <dt>Superuser</dt>
  <dd><%= bool_to_text @user.is_superuser %></dd>
</dl>
