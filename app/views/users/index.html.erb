<p class="pull-right">
  <%= link_to "add a new user", new_user_path, class: "btn btn-info" %>
</p>

<h1>Users</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Date of birth</th>
      <th>Zip code</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.username, user_path(user) %></td>
      <td><%= user.email %></td>
      <td><%= user.born_on %></td>
      <td><%= user.zip_code %></td>
      <td><%= link_to "edit", edit_user_path(user), class: "btn btn-info" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
